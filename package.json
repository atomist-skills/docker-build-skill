{
  "name": "@atomist/docker-build-skill",
  "description": "Docker Build",
  "author": {
    "name": "Atomist",
    "email": "oss@atomist.com"
  },
  "license": "Apache-2.0",
  "keywords": [
    "DEVOPS",
    "DEPLOY"
  ],
  "homepage": "https://github.com/atomist-skills/docker-build-skill",
  "repository": {
    "type": "git",
    "url": "https://github.com/atomist-skills/docker-build-skill.git"
  },
  "icon": "file://docs/images/icon.svg",
  "main": "node_modules/@atomist/skill/lib/function.js",
  "dependencies": {
    "@atomist/skill": "^0.1.1-101",
    "@kubernetes/client-node": "^0.12.0",
    "@types/fs-extra": "^8.1.1",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.20",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "^1.7.1",
    "@graphql-codegen/cli": "^1.17.8",
    "@graphql-codegen/typescript": "^1.17.9",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@types/lodash": "^4.14.161",
    "@types/mocha": "^7.0.2",
    "@types/power-assert": "^1.5.3",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "espower-typescript": "^9.0.2",
    "graphql": "^15.3.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "mocha": "^8.1.3",
    "npm-run-all": "^4.1.5",
    "power-assert": "^1.6.1",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "supervisor": "^0.12.0",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.7"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "autotest": "supervisor --watch index.ts,lib,test --extensions ts --no-restart-on exit --quiet --exec npm -- test",
    "build": "run-s compile test lint doc",
    "clean": "run-p clean:compile clean:test clean:doc clean:run",
    "clean:compile": "rimraf git-info.json \"*.{d.ts,js}{,.map}\" \"{lib,test}/**/*.{d.ts,js}{,.map}\" lib/typings/types.ts",
    "clean:dist": "run-s clean clean:npm",
    "clean:doc": "rimraf doc",
    "clean:npm": "rimraf node_modules",
    "clean:run": "rimraf *-v8.log profile.txt log",
    "clean:test": "rimraf .nyc_output coverage",
    "compile": "run-s gql:gen compile:ts",
    "compile:ts": "tsc --project .",
    "doc": "typedoc --mode modules --excludeExternals --ignoreCompilerErrors --exclude \"**/*.d.ts\" --out doc index.ts lib",
    "git:info": "atm-git-info",
    "gql:gen": "graphql-codegen",
    "lint": "eslint --ext .ts .",
    "lint:fix": "npm run lint -- --fix",
    "start": "functions-framework --target=entryPoint --signature-type=event",
    "test": "echo no tests",
    "test:one": "mocha --require espower-typescript/guess \"test/**/${TEST:-*.test.ts}\"",
    "typedoc": "npm run doc",
    "skill": "run-s compile test skill:generate",
    "skill:generate": "atm-skill generate",
    "atm:lint:prettier": "prettier --write",
    "atm:lint:eslint": "eslint --fix"
  },
  "engines": {
    "node": ">=8.2.0",
    "npm": ">=5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.@(graphql|json|markdown|yaml|yml|md)": "npm run atm:lint:prettier",
    "**/*.ts": "npm run atm:lint:eslint"
  }
}
